#!/bin/bash

{{ if eq .chezmoi.osRelease.logo "archlinux-logo" }}

install_yay_packages() {
  local pkgs=("$@")

  if ! command -v yay >/dev/null 2>&1; then
    echo "error: yay not installed" >&2
    return 1
  fi

  if [ "${#pkgs[@]}" -eq 0 ]; then
    echo "error: no packages specified" >&2
    return 1
  fi

  yay -S --needed --noconfirm "${pkgs[@]}"
}

pkgs=(
  # cli-tools
  fastfetch
)

install_yay_packages "${pkgs[0]}"

{{ end }}

{{ end }}
