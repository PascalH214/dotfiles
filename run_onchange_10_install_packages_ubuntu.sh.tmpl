#!/bin/bash

# Define colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
BOLD='\033[1m'
RED='\033[0;31m'
NC='\033[0m'

install_apt_packages() {
  # The first argument is the Category Label
  local label="$1"
  # Shift moves arguments to the left, so $2 becomes $1, etc.
  shift
  # Now $@ contains only the package names
  local pkgs=("$@")

  if ! command -v apt >/dev/null 2>&1;
    then
    echo -e "${RED}error:${NC} apt not installed" >&2
    return 1
  fi

  if [ "${#pkgs[@]}" -eq 0 ]; then
    return 0
  fi

  echo -e "${BLUE}======================================${NC}"
  # Using the dynamic label here
  echo -e "${BOLD}Installing ${label}:${NC}"
  for pkg in "${pkgs[@]}"; do
    echo -e "  ${BLUE}->${NC} $pkg"
  done
  echo -e "${BLUE}======================================${NC}\n"

  sudo apt update
  sudo apt install -y "${pkgs[@]}"

  echo -e "\n${GREEN}âœ“ ${label} installation finished.${NC}\n"
}

# The entire installation logic is now driven by the data
# in .chezmoi.toml.tmpl. This script only defines *how* to install.

{{ if eq .os "ubuntu" -}}

install_apt_packages "CLI Tools" {{ range .pkgs_cli }}{{ . | quote }} {{ end }}
install_apt_packages "TUI Applications" {{ range .pkgs_tui }}{{ . | quote }} {{ end }}
install_apt_packages "Dev Tools" {{ range .pkgs_dev }}{{ . | quote }} {{ end }}

{{ if not .headless -}}
install_apt_packages "GUI Applications" {{ range .pkgs_gui }}{{ . | quote }} {{ end }}
install_apt_packages "Fonts" {{ range .pkgs_fonts }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_hyprland -}}
install_apt_packages "Hyprland and related" {{ range .pkgs_hyprland }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_kde_apps }}
install_apt_packages "KDE-Apps" {{ range .pkgs_kde }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_media_related_pkgs }}
install_apt_packages "Media related packages" {{ range .pkgs_media }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_timeshift }}
install_apt_packages "Timeshift and related packages" {{ range .pkgs_timeshift }}{{ . | quote }} {{ end }}
{{- end }}

install_apt_packages "Other Tools" {{ range .pkgs_other }}{{ . | quote }} {{ end }}

{{ end -}}
