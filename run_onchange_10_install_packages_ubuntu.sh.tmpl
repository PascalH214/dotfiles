#!/bin/bash

# Define colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
BOLD='\033[1m'
RED='\033[0;31m'
NC='\033[0m'

install_snap_packages() {
  local label="$1"
  shift
  local pkgs=("$@")

  if ! command -v snap >/dev/null 2>&1; then
    echo -e "${RED}error:${NC} snap not installed" >&2
    return 1
  fi

  if [ "${#pkgs[@]}" -eq 0 ]; then
    return 0
  fi

  echo -e "${BLUE}======================================${NC}"
  echo -e "${BOLD}Installing ${label}:${NC}"
  for pkg in "${pkgs[@]}"; do
    echo -e "  ${BLUE}->${NC} $pkg"
  done
  echo -e "${BLUE}======================================${NC}\n"

  for pkg in "${pkgs[@]}"; do
    sudo snap install "$pkg"
  done

  echo -e "\n${GREEN}âœ“ ${label} installation finished.${NC}\n"
}

{{ if eq .os "ubuntu" -}}

install_snap_packages "CLI Tools" {{ range .pkgs_cli }}{{ . | quote }} {{ end }}
install_snap_packages "TUI Applications" {{ range .pkgs_tui }}{{ . | quote }} {{ end }}
install_snap_packages "Dev Tools" {{ range .pkgs_dev }}{{ . | quote }} {{ end }}

{{ if not .headless -}}
install_snap_packages "GUI Applications" {{ range .pkgs_gui }}{{ . | quote }} {{ end }}
install_snap_packages "Fonts" {{ range .pkgs_fonts }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_hyprland -}}
install_snap_packages "Hyprland and related" {{ range .pkgs_hyprland }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_kde_apps }}
install_snap_packages "KDE-Apps" {{ range .pkgs_kde }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_media_related_pkgs }}
install_snap_packages "Media related packages" {{ range .pkgs_media }}{{ . | quote }} {{ end }}
{{- end }}

{{ if .install_timeshift }}
install_snap_packages "Timeshift and related packages" {{ range .pkgs_timeshift }}{{ . | quote }} {{ end }}
{{- end }}

install_snap_packages "Other Tools" {{ range .pkgs_other }}{{ . | quote }} {{ end }}

{{ end -}}
